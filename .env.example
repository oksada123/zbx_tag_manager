# Zabbix API Configuration
ZABBIX_URL=http://your-zabbix-server/api_jsonrpc.php

# Authentication Method 1: API Token (recommended)
# Generate token in Zabbix: User settings -> API tokens -> Create API token
ZABBIX_API_TOKEN=your-api-token-here

# Authentication Method 2: Username/Password (fallback if API token not set)
ZABBIX_USER=your-username
ZABBIX_PASSWORD=your-password

# Flask
SECRET_KEY=your-secret-key-here

# Debug mode (set to false in production)
DEBUG_ENABLED=false

# Bulk operations limit (max number of items per batch)
MAX_BULK_SIZE=1000